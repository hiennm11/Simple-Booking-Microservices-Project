{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning",
        "Yarp": "Information"
      }
    }
  },
  "Seq": {
    "ServerUrl": "${SEQ_URL}",
    "ApiKey": "${SEQ_API_KEY}"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "SecretKey": "${JWT_SECRET_KEY}",
    "Issuer": "${JWT_ISSUER}",
    "Audience": "${JWT_AUDIENCE}"
  },
  "RateLimiting": {
    "GlobalPolicy": {
      "PermitLimit": 100,
      "WindowMinutes": 1,
      "QueueLimit": 5,
      "Comment": "Default rate limit for all endpoints: 100 requests per minute per IP"
    },
    "AuthPolicy": {
      "PermitLimit": 5,
      "WindowMinutes": 5,
      "SegmentsPerWindow": 5,
      "Comment": "Strict limit for authentication endpoints to prevent brute force: 5 attempts per 5 minutes per IP"
    },
    "BookingPolicy": {
      "TokenLimit": 50,
      "TokensPerPeriod": 10,
      "ReplenishmentMinutes": 1,
      "QueueLimit": 3,
      "Comment": "Token bucket for booking operations: 50 token capacity, refill 10 tokens per minute"
    },
    "PaymentPolicy": {
      "PermitLimit": 10,
      "QueueLimit": 2,
      "Comment": "Concurrency limit for payment operations: max 10 concurrent requests per user"
    },
    "ReadPolicy": {
      "PermitLimit": 200,
      "WindowMinutes": 1,
      "Comment": "Higher limit for read operations: 200 requests per minute per user"
    },
    "PremiumPolicy": {
      "PermitLimit": 500,
      "WindowMinutes": 1,
      "Comment": "Premium tier rate limit: 500 requests per minute (future feature)"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "users-route": {
        "ClusterId": "users-cluster",
        "Match": {
          "Path": "/api/users/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/users/{**catch-all}"
          }
        ],
        "Metadata": {
          "Comment": "Register and Login are public, other endpoints should be protected"
        }
      },
      "bookings-route": {
        "ClusterId": "bookings-cluster",
        "AuthorizationPolicy": "authenticated",
        "Match": {
          "Path": "/api/bookings/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/bookings/{**catch-all}"
          }
        ]
      },
      "payments-route": {
        "ClusterId": "payments-cluster",
        "AuthorizationPolicy": "authenticated",
        "Match": {
          "Path": "/api/payment/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/payment/{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "users-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://userservice"
          }
        },
        "HttpClient": {
          "ActivityTimeout": "00:01:00",
          "RequestTimeout": "00:00:45"
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "bookings-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://bookingservice"
          }
        },
        "HttpClient": {
          "ActivityTimeout": "00:01:00",
          "RequestTimeout": "00:00:45"
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "payments-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://paymentservice"
          }
        },
        "HttpClient": {
          "ActivityTimeout": "00:01:00",
          "RequestTimeout": "00:00:45"
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      }
    }
  }
}
