# Environment Variables Template
# Copy this file to .env and update with your values
# DO NOT commit .env file to version control

# Environment
ASPNETCORE_ENVIRONMENT=Development

# PostgreSQL - UserService
# For local development: use localhost
# For Docker: use service name (userdb)
USERDB_HOST=userdb
USERDB_PORT=5432
USERDB_NAME=userdb
USERDB_USER=userservice
USERDB_PASSWORD=userservice123

# PostgreSQL - BookingService
# For local development: use localhost
# For Docker: use service name (bookingdb)
BOOKINGDB_HOST=bookingdb
BOOKINGDB_PORT=5433
BOOKINGDB_NAME=bookingdb
BOOKINGDB_USER=bookingservice
BOOKINGDB_PASSWORD=bookingservice123

# PostgreSQL - InventoryService
# For local development: use localhost
# For Docker: use service name (inventorydb)
INVENTORYDB_HOST=inventorydb
INVENTORYDB_PORT=5435
INVENTORYDB_NAME=inventorydb
INVENTORYDB_USER=inventoryservice
INVENTORYDB_PASSWORD=InventorySvc@2025!SecurePass

# MongoDB - PaymentService
# For local development: use localhost
# For Docker: use service name (paymentdb)
PAYMENTDB_HOST=paymentdb
PAYMENTDB_PORT=27017
PAYMENTDB_NAME=paymentdb
PAYMENTDB_USER=paymentservice
PAYMENTDB_PASSWORD=paymentservice123

# RabbitMQ
# For Docker: use service name (rabbitmq)
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# JWT Configuration (MUST be identical across all services)
JWT_SECRET_KEY=YourSuperSecretKeyForJWTTokenGeneration123!
JWT_ISSUER=BookingSystem.UserService
JWT_AUDIENCE=BookingSystem.Clients
JWT_EXPIRY_MINUTES=60

# Seq (Optional) - Centralized Logging
# For Docker: use service name (seq)
SEQ_URL=http://seq:80
SEQ_API_KEY=
SEQ_ADMIN_PASSWORD=Admin@2025!SeqPass

# API Ports
USERSERVICE_PORT=5001
BOOKINGSERVICE_PORT=5002
PAYMENTSERVICE_PORT=5003
INVENTORYSERVICE_PORT=5004
APIGATEWAY_PORT=5000
